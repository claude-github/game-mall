
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录</title>
    <link href="~/Css/login.css" rel="stylesheet" />
</head>
<body>
    @{
        if (TempData["DataError"] != null)
        {
            <script>
                alert("@TempData["DataError"]");
            </script>
        }
    }
    <form action="/FrontCustomer/Login" method="post">
        <div class="bg-block">
            <div class="login-container">
                <div class="left-block">
                </div>
                <div class="right-block">
                    <img class="logo" src="~/Images/User/logo-name.png" />
                    <div class="userName">
                        <img src="~/Images/User/用户.png" />
                        <input type="text" name="UserName" id="UserName" placeholder="用户名/邮箱" onblur="UserCheck()" />
                        <div class="tip" id="tip_userName"></div>
                    </div>
                    <div class="password">
                        <img src="~/Images/User/密码.png" />
                        <input type="password" name="Password" id="Password" placeholder="密码" onblur="PasswordCheck()" />
                        <div class="tip" id="tip_password"></div>
                    </div>
                    <div class="choose">
                        <div class="remeber-password">
                            <label><input type="radio" />记住密码</label>
                        </div>
                        <a href="#" class="forget-password">忘记密码？</a>
                    </div>
                    <button class="login" type="submit">登录</button>
                    <div class="register">
                        <span>没有账号？</span>
                        <a href="/FrontCustomer/Register">立即注册</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script src="~/Js/user.js"></script>
</body>
</html>
