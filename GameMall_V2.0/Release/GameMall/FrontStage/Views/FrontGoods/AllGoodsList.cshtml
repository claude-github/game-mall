@model PagedList.PagedList<GameMall_Front.ViewModels.Goods.ViewModelGoods>
@{ 
    Layout = null;
}
<div class="plist">
    <ul class="clearfix">
        @foreach (var item in Model)
        {
            @Html.Partial("ItemGoods", item);
        }
    </ul>
</div>

<div class="jbt_page">
    <input id="page_totle_count" value="@Model.PageCount" type="hidden" />
    <input id="current_page" value="@Model.PageNumber" type="hidden" />
    <span>共 @Model.PageCount 页</span>
    <input class="to_first" type="button" value="第一页" title="第一页" onclick="to_first()" />
    <input class="to_pre" type="button" value="前一页" title="前一页" onclick="to_pre()" />
    <span>第</span><input class="inputbox_page_number" id="inputbox_page_number" value="@Model.PageNumber" /><span>页</span>
    <input class="to_next" type="button" value="下一页" title="下一页" onclick="to_next()" />
    <input class="to_last" type="button" value="最后一页" title="最后一页" onclick="to_last()" />
    <button id="go_to_page" class="goto" onclick="go_to()">GO</button>
</div>
