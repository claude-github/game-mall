@model PagedList.PagedList<GameMall_Back.ViewModels.Order.ViewModelOrder>
@{ 
    Layout = null;
}
<div class="list">
    <table>
        <thead>
            <tr>
                <th class="choose-all">
                    <input type="checkbox" />全选
                </th>
                <th>商品名称</th>
                <th>单价(元)</th>
                <th>数量</th>
                <th>版本号</th>
                <th>收货人</th>
                <th>总金额</th>
                <th>订单状态</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td  class="order_mes"colspan="9">
                        <div>                
                            <span>订单号：@item.OrderId</span>
                            <span>下单时间：@item.OrderTime</span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="choose-item">
                        <input type="checkbox" />
                        @*<img class="goodsImage" src="~/Images/Goods/hot3.jpg" />*@
                    </td>
                    <td>@item.GoodsName</td>
                    <td>@item.Price</td>
                    <td>@item.OrderGoodsNumber</td>
                    <td>@item.VersionName</td>
                    <td>@item.DeliveryName</td>
                    <td>@item.Price</td>
                    @if (item.OrderStatus == 0)
                    {
                        <td>
                            <div>未付款</div>
                            <div>未确认</div>
                            <div>未发货</div>
                            <div>未签收</div>
                        </td>
                    }
                    @if (item.OrderStatus == 1)
                    {
                        <td>
                            <div>已付款</div>
                            <div>未确认</div>
                            <div>未发货</div>
                            <div>未签收</div>
                        </td>
                    }
                    @if (item.OrderStatus == 2)
                    {
                        <td>
                            <div>已付款</div>
                            <div>已确认</div>
                            <div>未发货</div>
                            <div>未签收</div>
                        </td>
                    }
                    @if (item.OrderStatus == 3)
                    {
                        <td>
                            <div>已付款</div>
                            <div>已确认</div>
                            <div>已发货</div>
                            <div>未签收</div>
                        </td>
                    }
                    @if (item.OrderStatus == 4|| item.OrderStatus == 5)
                    {
                        <td>
                            <div>已付款</div>
                            <div>已确认</div>
                            <div>已发货</div>
                            <div>已签收</div>
                        </td>
                    }
                    
                    <td>
                        <form action="/Order/OrderDetail">
                            <input name="orderId" value="@item.OrderId" type="hidden"/>
                            <button>查看订单</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="jbt_page">
    <input id="page_totle_count" value="@Model.PageCount" type="hidden" />
    <input id="current_page" value="@Model.PageNumber" type="hidden" />
    <span>共 @Model.PageCount 页</span>
    <input class="to_first" type="button" title="第一页" onclick="to_first()" />
    <input class="to_pre" type="button" title="前一页" onclick="to_pre()" />
    <span>第</span><input class="inputbox_page_number" id="inputbox_page_number" value="@Model.PageNumber" /><span>页</span>
    <input class="to_next" type="button" title="下一页" onclick="to_next()" />
    <input class="to_last" type="button" title="最后一页" onclick="to_last()" />
    <button id="go_to_page" class="goto" onclick="go_to()">GO</button>
</div>
