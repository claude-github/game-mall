@model GameMall_Front.ViewModels.Customer.ViewModelUsers
@{ 
    Layout = null;
}

@section scripts{
    @Scripts.Render("~/Js/uploud-image.js")
}
@*<script src="~/Js/jquery-1.9.1.js"></script>
